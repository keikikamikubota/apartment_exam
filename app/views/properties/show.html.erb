<h1>閲覧</h1>

<p>
  <strong>物件名:</strong> <%= @property.name %>
</p>
<p>
  <strong>賃料:</strong> <%= @property.value %>円
</p>
<p>
  <strong>住所:</strong> <%= @property.address %>
</p>
<p>
  <strong>築年数:</strong> <%= @property.age %>年
</p>
<p>
  <strong>備考:</strong> <%= @property.note %>
</p>

<hr>
<% i = 0 %>
<% @property.stations.each do |station|%>
<h3>最寄り駅<%= i += 1 %></h3>
<ul>
  <li>
    <strong>路線名</strong> <%= station.train_line %>
  </li>
  <li>
    <strong>駅名</strong> <%= station.station_name %>
  </li>
  <li>
    <strong>徒歩分数</strong> <%= station.walking_time %>分
  </li>
</ul>
<% end %>

<br>

<%= link_to "編集", edit_property_path(@property) %> |
<%= link_to "戻る", properties_path %>