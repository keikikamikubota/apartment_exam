<%= form_with(model: @property, local: true) do |form| %>
  <div class="field">
    <%= form.label :"物件名" %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :"賃料" %><br>
    <%= form.text_field :value %>
  </div>

  <div class="field">
    <%= form.label :"築年数" %><br>
    <%= form.text_field :age %>
  </div>

  <div class="field">
    <%= form.label :"備考" %><br>
    <%= form.text_area :note %>
  </div>

  <hr>

  <%= form.fields_for :stations do |stations_form| %>
    <div class="field">
      <%= stations_form.label :"路線名" %><br>
      <%= stations_form.text_field :train_line %>
    </div>
    <div class="field">
      <%= stations_form.label :"駅名" %><br>
      <%= stations_form.text_field :station_name %>
    </div>
    <div class="field">
      <%= stations_form.label :"徒歩時間" %><br>
      <%= stations_form.text_field :walking_time %>
    </div>
<% end %>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>